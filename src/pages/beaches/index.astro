---
// src/pages/beaches/index.astro

import SiteLayout from '../../layouts/SiteLayout.astro'
import Breadcrumbs from '@/shared/ui/Breadcrumbs.astro'
import EntityCard from '@/shared/ui/EntityCard.astro'
import { beachRepository } from '@/entities/beach/api/beachRepository'
import { logApiError } from '@/shared/api/errors'

let beaches = []
let error: string | null = null

try {
  beaches = await beachRepository.getAll()
} catch (err) {
  logApiError(err)
  error = 'Не удалось загрузить список пляжей'
}
---

<SiteLayout
  title="Пляжи Ибицы | Ibiza.ru"
  description="Лучшие пляжи Ибицы — от популярных туристических до уединённых бухт. (Прототип)"
  canonical="https://ibiza.ru/beaches"
>
  <div class="container mx-auto px-4 py-10">
    <div class="mb-6">
      <Breadcrumbs items={[{ href: '/', label: 'Главная' }, { label: 'Пляжи' }]} />
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-bold">Пляжи Ибицы</h1>
      <p class="text-base-content/70 mt-2">
        Откройте для себя кристально чистые воды и белоснежные пески лучших пляжей острова
      </p>
    </div>

    {beaches.length === 0 ? (
      <div class="text-center py-12 text-base-content/60">Пляжи пока не добавлены</div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {beaches.map((b) => (
          <EntityCard entity={b} href={`/beaches/${b.code}`} />
        ))}
      </div>
    )}
  </div>
</SiteLayout>
