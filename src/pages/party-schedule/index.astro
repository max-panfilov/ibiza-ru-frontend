---
// src/pages/party-schedule/index.astro

import SiteLayout from '../../layouts/SiteLayout.astro'
import Breadcrumbs from '@/shared/ui/Breadcrumbs.astro'
import { partyScheduleRepository } from '@/entities/party-schedule/api/partyScheduleRepository'
import { formatDateTimeRu } from '@/shared/lib/formatDate'
import { logApiError } from '@/shared/api/errors'

let partyEvents = []
let error: string | null = null

try {
  partyEvents = await partyScheduleRepository.getAll()
} catch (err) {
  logApiError(err)
  error = 'Не удалось загрузить список вечеринок'
}
---

<SiteLayout
  title="Расписание вечеринок | Ibiza.ru"
  description="Актуальное расписание всех вечеринок и мероприятий на острове (прототип)"
  canonical="https://ibiza.ru/party-schedule"
>
  <div class="container mx-auto px-4 py-10">
    <div class="mb-6">
      <Breadcrumbs items={[{ href: '/', label: 'Главная' }, { label: 'Вечеринки' }]} />
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-bold">Расписание вечеринок</h1>
      <p class="text-base-content/70 mt-2">Актуальное расписание всех вечеринок и мероприятий на острове</p>
    </div>

    {error ? (
      <div class="alert alert-error">
        <span>{error}</span>
      </div>
    ) : partyEvents.length === 0 ? (
      <div class="text-center py-12 text-base-content/60">Вечеринки пока не добавлены</div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {partyEvents.map((e) => (
          <div class="card bg-base-100 border border-base-200">
            <div class="card-body">
              <h2 class="card-title">{e.eventName}</h2>
              <div class="text-sm text-base-content/60">
                {e.date ? formatDateTimeRu(e.date) : null}
                {e.startTime ? <span> {e.startTime}</span> : null}
              </div>
              {e.description && <p class="text-base-content/70">{e.description}</p>}
              {e.ticketPrice && <div class="text-sm font-semibold">От {e.ticketPrice}</div>}
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</SiteLayout>
