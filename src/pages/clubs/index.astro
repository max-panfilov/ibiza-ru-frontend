---
// src/pages/clubs/index.astro

import SiteLayout from '../../layouts/SiteLayout.astro'
import Breadcrumbs from '@/shared/ui/Breadcrumbs.astro'
import EntityCard from '@/shared/ui/EntityCard.astro'
import { clubRepository } from '@/entities/club/api/clubRepository'
import { logApiError } from '@/shared/api/errors'
import type { Club } from '@/entities/club/model/types'

let clubs: Club[] = []
let error: string | null = null

try {
  clubs = await clubRepository.getAll()
} catch (err) {
  logApiError(err)
  error = 'Не удалось загрузить список клубов'
}

// SEO: JSON-LD для страницы-коллекции клубов.
// SEO: og:image для страницы списка. Берём обложку первого клуба (если есть).
const ogImage = clubs[0]?.coverImage?.url ?? clubs[0]?.images?.[0]?.url

const clubsStructuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'CollectionPage',
    name: 'Клубы Ибицы',
    url: 'https://ibiza.ru/clubs',
    description: 'Легендарные ночные клубы Ибицы — от всемирно известных до андеграундных. (Прототип)',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'ItemList',
    name: 'Список клубов',
    itemListElement: clubs.map((c, idx) => ({
      '@type': 'ListItem',
      position: idx + 1,
      item: {
        '@type': 'NightClub',
        name: c.title,
        url: `https://ibiza.ru/clubs/${c.code}`,
      },
    })),
  },
]
---

<SiteLayout
  title="Клубы Ибицы | Ibiza.ru"
  description="Легендарные ночные клубы Ибицы — от всемирно известных до андеграундных. (Прототип)"
  canonical="https://ibiza.ru/clubs"
  ogImage={ogImage}
  structuredData={clubsStructuredData}
>
  <div class="container mx-auto px-4 py-10">
    <div class="mb-6">
      <Breadcrumbs items={[{ href: '/', label: 'Главная' }, { label: 'Клубы' }]} />
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-bold">Клубы Ибицы</h1>
      <p class="text-base-content/70 mt-2">Легендарные ночные клубы и лучшие диджеи со всего мира</p>
    </div>

    {error ? (
      <div class="alert alert-error">
        <span>{error}</span>
      </div>
    ) : clubs.length === 0 ? (
      <div class="text-center py-12 text-base-content/60">Клубы пока не добавлены</div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {clubs.map((c) => (
          <EntityCard entity={c} href={`/clubs/${c.code}`} />
        ))}
      </div>
    )}
  </div>
</SiteLayout>
